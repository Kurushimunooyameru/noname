#include <stdio.h>
int main(void)
{
float x, x1, x2,sum;
printf("x = ");
scanf ("%f", &x);
printf("x1 = ");
scanf ("%f", &x1);
printf("x2 = ");
scanf ("%f", &x2);
if ((x>=x1) & (x>=x2))
{
if (x1>=x2){
printf("%f\n",x+x1);
} 
else printf("%f\n",x+x2);
} 
else if ((x1>=x1) & (x1>=x2))
if (x>=x2)
{
printf("%f\n",x+x1);
} 
else printf("%f\n",x1+x2);
else
if (x>=x1)
{
printf("%f\n",x+x2);
} 
else printf("%f\n",x1+x2);
return 0;
}
