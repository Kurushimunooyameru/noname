#include <stdio.h>
int main(void)
{
float a,b,c;
printf("a = ");
scanf ("%f", &a);
printf("b = ");
scanf ("%f", &b);
printf("c = ");
scanf ("%f", &c);
if ((a*a==b*b+c*c) | (b*b==a*a+c*c) | (c*c==a*a+b*b))
{
printf("Треугольник со сторонами a, b, c является прямоугольным");
}
else
{
printf("Треугольник со сторонами a, b, c не является прямоугольным");
}
return 0;
}
