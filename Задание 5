#include <stdio.h>
#include <math.h>

int main(void)
{
    float x1, y1, x2, y2, x3, y3, A, B, C, s, a, b, c, S, p;
    float AC = abs(A - C);
    float BC = abs(B - C);
    printf("x1 = ");
    scanf("%d", &x1);
    printf("y1 = ");
    scanf("%d", &y1);
    printf("x2 = ");
    scanf("%d", &x2);
    printf("y2 = ");
    scanf("%d", &y2);
    printf("A = ");
    scanf("%d", &A);
    printf("B = ");
    scanf("%d", &B);
    printf("C = ");
    scanf("%d", &C);
    printf("x3 = ");
    scanf ("%d", &x3);
    printf("y3 = ");
    scanf ("%d", &y3);
    a=sqrt(pow(x1-x2,2)+pow(y1-y2,2));
    b=sqrt(pow(x2-x3,2)+pow(y2-y3,2));
    c=sqrt(pow(x3-x1,2)+pow(y3-y1,2));
    p=(a+b+c)/2;
    S=sqrt(p*(p-a)*(p-b)*(p-c));
    printf("AC = %d\n", AC);
    printf("BC = %d\n", BC);
    printf("s = %d\n", sqrt(pow(x1 - x2, 2) + pow(y1 - y2, 2)));
    printf("AC+BC = %d\n", BC + AC);
    printf("AC*BC = %f\n",AC*BC);
    printf("P = %d\n",2*(abs(x1-x2)+abs(y1-y2)));
    printf("S = %d\n",abs(x1-x2)*abs(y1-y2));
    printf("S1 = %d\n",S);
    return 0;
}
